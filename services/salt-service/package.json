{
  "name": "salt-service",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/bootstrap.ts",
    "dev:worker": "tsx watch --env-file=../../.env src/worker/strategyLoop.ts",
    "build": "pnpm --filter=@tago-leap/shared build && tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker/strategyLoop.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/sensible": "^6.0.0",
    "@tago-leap/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
